<% content_for(:title, "#{@product.name} Details") %>
<h1><%= @product.name %></h1>
<h2><%= number_to_currency(@product.cost) %></h2>
<p><%= link_to "Add a review", new_product_review_path(@product) %> |
<%= link_to "Edit Product", edit_product_path(@product) %> |
<%= link_to "Delete Product", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <% @product.reviews.each do |review| %>
      <h3><%= review.author %> Says:</h3>
      <p><%= review.content_body %></p>
      <p>Rating: <%=review.rating%></p>
      <p><%= link_to "Edit", edit_product_review_path(@product, review) %> |
      <%= link_to "Delete", product_review_path(@product, review),
                               :data => {:confirm => "Are you sure?",
                                              :method => "delete"} %></p>
      <hr>
  <% end %>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>
